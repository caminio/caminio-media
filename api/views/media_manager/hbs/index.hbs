<section class="main-wrapper">
  <header>
    <div class="box title-box website">
      <div class="main-ctrl">
        <button class="btn icon-text" {{action 'promptNewWebpage'}}>
          <i class="fa fa-upload"></i>
          {{t 'media.upload'}}
        </button>
      </div>
      <h1>{{t 'media_manager.title'}}</h1>

    </div>

  </header>

  <div class="">

    <div class="col-md-12">
      <div class="box">
        <div class="box-title">
          <div class="btn-toolbox">

            <div class="btn-group">
              <button class="btn">
                <i class="fa fa-square-o" {{translateAttr title='select_all'}}></i>
              </button>
            </div>

            <div class="btn-group">
              <button class="btn">
                <i class="fa fa-trash-o" {{translateAttr title='delete_selected'}}></i>
              </button>
            </div>

            <div class="btn-group">
              <button class="btn">
                <i class="fa fa-cut" {{translateAttr title='cut'}}></i>
              </button>
              <button class="btn">
                <i class="fa fa-copy" {{translateAttr title='copy'}}></i>
              </button>
              <button class="btn">
                <i class="fa fa-paste" {{translateAttr title='paste'}}></i>
              </button>
            </div>

          </div>
        </div>

        <div class="row">
        
        <div class="col-md-4">
        </div>

        <div class="col-md-8">
          <form action="/caminio/mediafiles"
                class="dropzone"
                id="media-dropzone">
            <div class="fallback">
              <input type="file" name="file" />
            </div>
          </form>

        </div>

        </div>

      </div>
    </div>

  </div>

</section>