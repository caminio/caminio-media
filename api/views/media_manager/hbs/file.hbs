<div class="file-item col-xs-12 col-md-6">
  <div {{bind-attr title='content.name'}}
       {{bind-attr class=":thumbnail isCurrent:selected"}}
       {{action 'showDetails' content}}>
    {{#if content.isImage}}
      <img {{bind-attr src='content.url'}}>
    {{else}}
      <i class="fa fa-file-o"></i>
    {{/if}}
    <div class="caption">
      <div class="size">{{content.humanSize}}</div>
      <div class="clearfix">
        <span class="filename">{{content.name}}</span>
      </div>
    </div>
  </div>
</div>